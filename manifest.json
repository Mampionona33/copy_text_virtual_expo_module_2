{
  "name": "copy text virtual expo module 2",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "description": "Copy all text from tab",
  "permissions": [
    "storage",
    "clipboardRead",
    "tabs",
    "pageCapture",
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "img/icon16x16.png",
    "32": "img/icon32x32.png",
    "128": "img/icon128x128.png"
  },
  "background": {
    "service_worker": "background.js"
  },

  "commands": {
    "Copy_selected_text_to_ES": {
      "suggested_key": {
        "default": "Alt+4"
      },
      "description": "copy selected text to ES variable"
    },
    "Copy_selected_text_to_IT": {
      "suggested_key": {
        "default": "Alt+5"
      },
      "description": "copy selected text to IT variable"
    },
    "Copy_selected_text_to_JP": {
      "suggested_key": {
        "default": "Alt+6"
      },
      "description": "copy selected text to JP variable"
    },

    "host_permissions": ["http://www.directindustry.com/*"],

    "inject_text": {
      "suggested_key": {
        "default": "Alt+Shift+2"
      },
      "description": "Inject text in idp text pop up"
    }
  }
}
